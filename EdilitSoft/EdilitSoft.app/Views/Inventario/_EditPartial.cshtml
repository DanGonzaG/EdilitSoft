@model EdilitSoft.app.Models.Inventario

<div class="card">
    <div class="card-header bg-warning text-white">
        <h5 class="card-title mb-0">Editar Inventario</h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdArticulo" />
            <input type="hidden" asp-for="IdLibro" />

            <div class="form-group mb-3">
                <label class="control-label">Título del Libro</label>
                <input type="text" class="form-control" 
                       value="@Model.Libros?.Titulo" readonly />
                <span asp-validation-for="IdLibro" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Existencias" class="control-label"></label>
                <input asp-for="Existencias" class="form-control" />
                <span asp-validation-for="Existencias" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="form-group form-check mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Activo" />
                    @Html.DisplayNameFor(model => model.Activo)
                </label>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Guardar
                </button>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}