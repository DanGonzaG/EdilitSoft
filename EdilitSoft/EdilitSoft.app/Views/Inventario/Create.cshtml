@model EdilitSoft.app.Models.Inventario

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Inventario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="IdLibro" class="control-label">Titulo</label>
                <select asp-for="IdLibro" class ="form-control" asp-items="ViewBag.IdLibro"></select>
                <span asp-validation-for="IdLibro" class="text-danger"></span>
            </div>

            
            <div class="form-group">
                <label asp-for="Existencias" class="control-label"></label>
                <input asp-for="Existencias" class="form-control" />
                <span asp-validation-for="Existencias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Activo"
                       class="form-check-input"
                       id="activoCheckbox"
                       aria-label="Estado activo/inactivo" />
                <label class="sr-only" for="activoCheckbox">Estado</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
