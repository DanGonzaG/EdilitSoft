@model EdilitSoft.app.Models.Inventario

<div>
    <h4>@Model.Libros?.Titulo</h4>
    <hr />

    <div class="row">
        <div class="col-12">
            <dl class="row">
                <dt class="col-sm-5">Autor:</dt>
                <dd class="col-sm-7">@Model.Libros?.Autor</dd>

                <dt class="col-sm-5">Fecha modificación:</dt>
                <dd class="col-sm-7">@Model.Fecha.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-5">Existencias:</dt>
                <dd class="col-sm-7">@Model.Existencias</dd>

                <dt class="col-sm-5">Precio:</dt>
                <dd class="col-sm-7">@Model.Precio.ToString("C")</dd>

                <dt class="col-sm-5">Estado:</dt>
                <dd class="col-sm-7">
                    @if (Model.Activo)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactivo</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index"
           asp-route-editId="@Model.IdArticulo"
           asp-route-sortOrder="@Context.Request.Query["sortOrder"]"
           asp-route-currentFilter="@Context.Request.Query["currentFilter"]"
           class="btn btn-warning btn-sm">
            <i class="bi bi-pencil"></i> Editar
        </a>
    </div>
</div>